.sidebar
  .sidebar__header
    .sidebar__header__box
      .sidebar__header__box__username
        = current_user.nickname
      .sidebar__header__box__icons
        %p.sidebar__header__box__icons__edit
          = link_to new_group_path do
            = icon('fas', 'edit')
        %p.sidebar__header__box__icons__new
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .sidebar__groups
    - current_user.groups.each do |group|
      .sidebar__groups__group
        = link_to '#' do
          .sidebar__groups__group__name
            = group.name
          .sidebar__groups__group__latest-message
            Hello